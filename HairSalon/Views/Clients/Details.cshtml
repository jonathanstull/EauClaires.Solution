@{
  Layout = "_StylistsLayout";
}

@model Salon.Models.Client;

<div class="main">
  <h1>@Html.DisplayFor(model => model.Name)</h1>

  <h3>Contact Information</h3>
  <div class="contact">
    <p>@Html.DisplayNameFor(model => model.Phone): @Html.DisplayFor(model => model.Phone)</p>
    <p>@Html.DisplayNameFor(model => model.Email): @Html.DisplayFor(model => model.Email)</p>
  </div>

  <div class="contract-details">
    <h3>Appointment History</h3>
    <p>First appointment: @Html.DisplayFor(model => model.StartDate)</p>
    <p>Stylist: @Html.ActionLink($"{Model.Stylist.Name}", "Details", "Stylists", new { id = Model.StylistId })</p>
  </div>
</div>